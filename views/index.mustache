<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Smart To-Do List</title>
  </head>
  <body>
    <header>
      <h1>Smart To-Do List</h1>
    </header>
    <section class="task-adder">
      <form class="" action="/" method="post">
        <input type="text" name="item" value="" placeholder="Type your task here">
        <button type="submit">Add Task</button>
      </form>
    </section>
    <section class="task-list">
      <h4>To do Items</h4>
      <form class="" action="/completed" method="post">
        {{#incompletetasks}}
        <button type="submit" name="id" value="{{id}}">
        Done</button><span> {{item}}</span><br>
        {{/incompletetasks}}
      </form>
    </section>
    <br>
    <br>
    <section class="complete-tasks">
      <h4>Completed Items</h4>
      <form class="" action="/delete" method="post">
        {{#completetasks}}
        <button type="submit" name="id" value="{{id}}">
        Delete Task</button><span> {{item}}</span><br>
        {{/completetasks}}
      </form>
    </section>
  </body>
</html>
